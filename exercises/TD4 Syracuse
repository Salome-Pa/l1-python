def syracuse(n):
    """ Retourne la liste des valeurs de la suite en partant de n jusqu'Ã  1 """
    res = [] #execution 1:3, exe 2: 10 
    while True:
        res.append(n)
        if n == 1:
            break
        if n % 2 == 0: #si paire
            n = n // 2 #exe 2 : 5
        else:
            n = 3 * n + 1 #exe 1: 10
    return res

print(syracuse(3))